{
    "common": {
        "storePath": "C:\\ProjectData\\Articles\\daria_store_v2_test.db"
    },
    "import": {
        "articlesRoot": "C:\\ProjectData\\Articles",
        "resourcesRoot": "C:\\ProjectData\\Articles\\.resources",
        "directoryIgnorePatterns": [
            "^\\.",
            "^_"
        ],
        "fileIgnorePatterns": [
            "\\.(?!md$)"
        ],
        "dateTimeFormats": [
            "u",
            "yyyy-MM-dd",
            "dd/MM/yyyy"
        ],
        "indexFileName": "index.md",
        "storeSettings": [
            {
                "key": "clear_on_build",
                "value": "true"
            }
        ]
    },
    "build": {
        "profiles": [
            {
                "name": "",
                "rootPath": "",
                "ClearDirectoryBeforeBuild": true,
                "articlesTemplateSource": {
                    "type": "store",
                    "id": "article_template",
                    "versionType": "latest"
                },
                "seriesTemplateSource": {
                    "type": "store",
                    "id": "series_template",
                    "versionType": "latest"
                },
                "indexTemplateSource": {
                    "type": "store",
                    "id": "index_template",
                    "versionType": "latest"
                },
                "preBuildSteps": [
                    {
                        "type": "create-directory",
                        "name": "css"
                    },
                    {
                        "type": "create-directory",
                        "name": "js"
                    },
                    {
                        "type": "create-directory",
                        "name": "img"
                    }
                ],
                "postBuildSteps": [
                    {
                        "type": "export-images",
                        "outputDirectoryName": "img",
                        "skipIfExists": true
                    },
                    {
                        "type": "export-resource-bucket",
                        "bucketName": "css",
                        "useLatestResourceVersion": true,
                        "skipIfExists": true
                    },
                    {
                        "type": "export-resource-bucket",
                        "bucketName": "js",
                        "useLatestResourceVersion": true,
                        "skipIfExists": true
                    }
                ]
            }
        ]
    }
}